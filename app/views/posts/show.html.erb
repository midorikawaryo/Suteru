<h1>投稿詳細画面</h1>

<p><%= image_tag @post.image %></p>
<p>投稿者：<%= link_to  @post.user.name,user_path(id: @post.user.id) %></p>
<p>タイトル: <%= @post.title %></p>
<p>内容: <%= @post.comment %></p>

<p><%= link_to "編集", edit_post_path(@post.id) %></p>
<p><%= link_to "削除", post_path(@post.id),method: :delete,data: { confirm: '本当に削除していいですか？' } %></p>

<% unless @post.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
